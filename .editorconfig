# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset                  = utf-8
trim_trailing_whitespace = true
end_of_line              = lf
insert_final_newline     = true
indent_style             = space

# Tab indentation (no size specified)
[Makefile]
indent_style             = tab

[*.{yml,sh}]
indent_size              = 2

[*.json]
indent_size              = 4

# Local Variables:
# mode: conf
# tab-width: 2
# indent-tabs-mode: nil
# End:
